{
  "version": 2,
  "installCommand": "echo skip",
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/scan", "dest": "/api/scan.js" },
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/test", "dest": "/api/test.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
